<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/chagepwd_tbar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/tittle_bg"
        android:theme="@style/myToobar"></android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/wuyonglogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chagepwd_tbar"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/login_top"
        android:visibility="gone"
        app:layout_marginTopPercent="4%" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wuyonglogo"
        android:orientation="vertical"
        app:layout_marginTopPercent="10%"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="20%">


        <EditText
            android:id="@+id/change_onepwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


        <EditText
            android:id="@+id/change_twopwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />


        <EditText
            android:id="@+id/change_thrpwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建议新密码采用数字+字母组合（6-10位）"
            android:textSize="12sp" />

        <Button
            android:id="@+id/change_sendbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@mipmap/login_btn"
            android:text="确认"
            android:textColor="@color/white"
            android:textSize="22dp" />
    </LinearLayout>

</android.support.percent.PercentRelativeLayout>