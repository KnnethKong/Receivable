<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dimen_6_dp"
    android:paddingTop="@dimen/dimen_6_dp">


    <TextView
        android:id="@+id/catorder_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dimen_20_dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_30_dp"
        android:layout_toRightOf="@+id/catorder_name"
        android:gravity="center|right">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:id="@+id/catorder_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3_dp"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/catorder_um"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_dp"
            android:textColor="@color/black"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_3_dp"
            android:text="件"
            android:textColor="@color/black"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choiceLayout"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/dimen_15_dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/catorder_reduce"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/jianjianbg"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/huang1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/catorder_goodsnum"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:gravity="center"
            android:maxLength="10"
            android:text="  "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/catorder_increase"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/jiajianbg"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/huang1"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>