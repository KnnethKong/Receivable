<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/edit_item_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/edit_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/edit_item_img"
        android:ellipsize="start"
        android:maxLength="10"
        android:text="海鲜大拼"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/edit_item_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_item_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/edit_item_img"
        android:textColor="@color/notecor" />

    <TextView
        android:id="@+id/edit_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_item_name"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/edit_item_img"
        android:text="18.36"
        android:textColor="@color/toolbar_bg"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/edit_item_wy1"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/edit_item_price"
        android:layout_toRightOf="@id/edit_item_price"
        android:text=" 元/份"
        android:textColor="@color/hei9"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/edit_item_style"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/edit_item_price"
        android:layout_below="@id/edit_item_note"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/edit_item_price"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="规格"
        android:visibility="invisible" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/edit_item_cle"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/jiajianbg"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/huang1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/edit_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:text="1"
            android:textColor="@color/hei3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/edit_item_add"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/jiajianbg"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/huang1"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/edit_item_del"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shanchu"
            android:text="删除"
            android:textColor="@color/toolbar_bg" />

    </LinearLayout>

</RelativeLayout>