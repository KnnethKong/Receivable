<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_10_dp"
        android:paddingTop="@dimen/dimen_10_dp"
        android:text="是否确认下单" />


    <ListView
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/dimen_8_dp"
        android:paddingTop="@dimen/dimen_8_dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/pre_order_wy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/dimen_6_dp"
            android:paddingLeft="12dp"
            android:paddingTop="@dimen/dimen_12_dp"
            android:text="备注"
            android:textColor="@color/txtcolor"
            android:textSize="16sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pre_order_wy"
            android:layout_marginLeft="@dimen/dimen_6_dp"
            android:layout_toRightOf="@id/pre_order_wy"
            android:background="@null"
            android:hint="再次输入备注"
            android:maxLines="1"
            android:paddingBottom="@dimen/dimen_6_dp"
            android:paddingTop="@dimen/dimen_6_dp" />

        <View
            android:id="@+id/pre_order_wy3"
            android:layout_width="match_parent"

            android:layout_height="@dimen/dimen_1_dp"
            android:layout_below="@id/pre_order_wy"
            android:layout_marginBottom="@dimen/dimen_6_dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="@dimen/dimen_12_dp"
            android:layout_marginTop="@dimen/dimen_6_dp"
            android:background="@color/bababa" />

        <TextView
            android:id="@+id/pre_order_wy2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pre_order_wy3"
            android:paddingBottom="@dimen/dimen_6_dp"
            android:paddingLeft="12dp"
            android:paddingTop="@dimen/dimen_12_dp"
            android:text="合计"
            android:textColor="@color/txtcolor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/pre_order_am"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pre_order_wy2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="22dp"
            android:text="230.56"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_4_dp"
        android:background="@color/white"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/pre_order_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12_dp"
            android:text="继续点菜" />

        <Button
            android:id="@+id/pre_order_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/pre_order_cancle"
            android:layout_toRightOf="@id/pre_order_cancle"
            android:text="确认下单" />

    </RelativeLayout>
</LinearLayout>