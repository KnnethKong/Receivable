<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/remind_item_relative"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/remind_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="7号呼叫服务员"
        android:textColor="@color/hei3"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/remind_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remind_item_info"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:text="03-08 11:11:22"
        android:textColor="@color/hei9" />

    <TextView
        android:id="@+id/remind_item_none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/remind_item_info"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="编号:"
        android:textColor="@color/hei9" />

    <TextView
        android:id="@+id/remind_item_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remind_item_none"
        android:layout_toRightOf="@id/remind_item_none"
        android:textColor="@color/hei9" />


    <TextView
        android:id="@+id/remind_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/remind_item_none"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/remind_item_date"
        android:layout_marginRight="12dp"
        android:text="已处理"
        android:textColor="@color/colorAccent"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/remind_item_none"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="6dp"
        android:background="#DBDBDB" />
</RelativeLayout>