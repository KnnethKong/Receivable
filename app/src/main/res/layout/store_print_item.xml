<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10_dp"
    android:layout_marginRight="@dimen/dimen_10_dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/storeprint_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_6_dp"
        android:textColor="@color/txtcolor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/storeprint_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/storeprint_item_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10_dp"
        android:textColor="@color/txtcolor" />

    <TextView
        android:id="@+id/storeprint_item_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/storeprint_item_name"
        android:layout_marginLeft="@dimen/dimen_10_dp"
        android:layout_marginTop="@dimen/dimen_6_dp" />

    <TextView
        android:id="@+id/storeprint_item_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/storeprint_item_ip"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_10_dp" />

    <TextView
        android:id="@+id/storeprint_item_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />
</RelativeLayout>