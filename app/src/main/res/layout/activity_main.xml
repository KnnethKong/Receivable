<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/mantabbg"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_fragment_huifu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/sk_se"
            android:gravity="center_horizontal"
            android:text="收款"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_fragment_order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/dz_no"
            android:gravity="center_horizontal"
            android:text="订单"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_fragment_recon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:drawablePadding="2dp"

            android:drawableTop="@mipmap/dd_no"
            android:gravity="center_horizontal"
            android:text="对账"

            android:textSize="12sp" />

        <TextView
            android:id="@+id/main_fragment_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"

            android:layout_weight="1"
            android:drawablePadding="2dp"
            android:drawableTop="@mipmap/my_no"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textSize="12sp" />


    </LinearLayout>


</LinearLayout>
