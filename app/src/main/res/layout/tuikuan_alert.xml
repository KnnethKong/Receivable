<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/alert_tuikuan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="退款提醒"
        android:textColor="@color/colorAccent"
        android:textSize="22dp"
        app:layout_marginLeftPercent="20%"
        app:layout_marginRightPercent="20%" />

    <LinearLayout
        android:id="@+id/alert_liner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert_tuikuan"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单金额 ："
            android:textSize="18sp" />


        <TextView
            android:id="@+id/alert_txtshow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/alert_txtall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/hongquan"
            android:text="全退"
            android:textColor="@color/red"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/alert_tuiliner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert_liner"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款金额 : "
            android:textSize="18sp" />


        <EditText
            android:id="@+id/alert_editmonery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="输入退款金额"
            android:inputType="numberDecimal"
            android:maxLength="8"
            android:maxLines="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/alert_tui_p_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alert_tuiliner"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录密码："
            android:textSize="18sp" />

        <EditText
            android:id="@+id/alert_tuikuanpwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:hint="请输入密码"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/alert_tui_p_lin"
        android:layout_marginTop="26dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/alert_cancelbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/refound_btn_bg"
            android:text="取消" />


        <Button
            android:id="@+id/alert_tuikuanbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:background="@drawable/refound_btn_bg"
            android:text="确定"
            android:textColor="#8a8a8a" />
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>