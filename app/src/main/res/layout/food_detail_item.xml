<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food_detail_item_img"
        android:layout_width="50dp"
        android:layout_height="42dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/food_detail_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/food_detail_item_img"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/food_detail_item_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_detail_item_name"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/food_detail_item_img"
        android:textColor="@color/notecor" />

    <TextView
        android:id="@+id/food_detail_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/food_detail_item_name"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:id="@+id/food_detail_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_detail_item_name"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/food_detail_item_img"
        android:textColor="@color/toolbar_bg"
        android:textSize="18sp" />

    <TextView
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/food_detail_item_price"
        android:layout_below="@id/food_detail_item_note"
        android:layout_toRightOf="@id/food_detail_item_price"
        android:text=" 元/份"
        android:textColor="@color/hei9"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/food_detail_item_style"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/food_detail_item_price"
        android:layout_below="@id/food_detail_item_note"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/food_detail_item_price"
        android:ellipsize="end"
        android:maxLines="1"
        android:visibility="gone" />

    <TextView
        android:id="@+id/food_detail_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/food_detail_item_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/food_detail_item_name"
        android:background="@drawable/numbg"
        android:textColor="@color/hei3"
        android:textSize="12sp" />


</RelativeLayout>