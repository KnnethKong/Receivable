<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/about_bg"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/about_toobal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@mipmap/tittle_bg"
        android:theme="@style/myToobar" />

    <LinearLayout
        android:id="@+id/about_wuyong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/about_toobal"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_marginTopPercent="10%">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/appicon" />

        <TextView
            android:id="@+id/about_txt_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/about_txt"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/about_updateliner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/about_wuyong"
        android:layout_marginTop="20dp"
        android:background="#ffff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20sp"
            android:text="检测更新"
            android:textColor="@color/txtcolor" />

        <ImageView
            android:id="@+id/about_wuyong_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@mipmap/backhui" />

        <TextView
            android:id="@+id/about_showversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:layout_toLeftOf="@id/about_wuyong_go"
            android:textColor="@color/about_txt" />


    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>